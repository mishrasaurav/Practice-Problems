Input:
4

Output:
3
44
555
6666
6666
555
44
3

*****************************************************************************************************************************

#include<iostream>
using namespace std;

int main(){
    int N;
    cin>>N;
    int number=3;
    for(int i=1;i<=N;i++){
         for(int j=1;j<=i;j++){
             
             cout<<number;
             
         }
         number++;
        cout<<endl;
    }
    number--;
    for(int i=N;i>=1;i--){
         for(int j=i;j>=1;j--){
             
             cout<<number;
             
         }
         number--;
        cout<<endl;
    }
}
